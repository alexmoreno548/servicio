<div class="container ">

    <tbody>
      <% @notices.each do |notice| %>
        <a href="/notices/<%= notice.id%>" id="titleNoneDeco">
            <h2><%= notice.title %></h2>
            <img src="<%=notice.image%>" class="image"> 
        </a>
          <p><%= notice.body[0, 500].html_safe %><%= link_to '(Ver mas)', notice%></p>
          <% if admin_signed_in? %>
            <div class="alinCenter">
              <%= link_to 'Editar', edit_notice_path(notice), :class => 'btn btn-success' %>
              <%= link_to 'Destruir', notice, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %>
            </div>
          <% end %>
        
          <hr>
          <br>
        
        <% end %>

  <br>
<% if admin_signed_in? %>
  <%= link_to 'Nueva Noticia', new_notice_path , :class => 'btn btn-primary'%>
<% end %>
<div class="alinCenter"> 
  
  <%= will_paginate @notices, :page_links => false %>
</div>
</div>
